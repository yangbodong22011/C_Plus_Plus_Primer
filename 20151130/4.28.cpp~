#include<iostream>

using std::cout;
using std::cin;
using std::endl;

int main(int argc,char *argv[])
{
    char *p;
    cout << sizeof(char) << endl;
    cout << sizeof(int) << endl;
    cout << sizeof(short) << endl;
    cout << sizeof(float) << endl;
    cout << sizeof(double) << endl;
    cout << sizeof(p) << endl;
    return 0;
}
